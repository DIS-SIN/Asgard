            "fields": [
                { "name": "text", "type": "string"},
                { "name": "language", "type": "string"},
                { "name": "sentimentScore", "type": "double"},
                { "name": "magnitudeScore", "type": "double" },
                { "name": "sentences", "type": "array", "items": {
                    "name": "processedSentences",
                    "type": "record",
                    "fields": [
                        {"name": "text", "type": "string"},
                        {"name": "sentimentScore", "type": "double"},
                        {"name": "magnitudeScore", "type": "double"}
                    ]
                  }
                }
            ]
        }
    }
    ]
}